    "outDir": "./dist",
    "rootDir":"./src",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "strict": true

  },
  "include": ["src/**/*", "types/**/*"]
